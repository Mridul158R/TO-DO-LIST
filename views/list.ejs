        <h1><%=listTitle %></h1>
    </div>
    <div class="box">
        <% newListItem.forEach(function(item){ %>
            <form action="delete" method="post">
                <div class="item">
                    <input type="checkbox" onChange="this.form.submit()" value="<%=item._id%>" name="checkbox">
                    <p><%= item.name %></p>
                </div>
                <input type="hidden" name="listName" value="<%= listTitle %>"></input>
            </form>
        <%})%>
